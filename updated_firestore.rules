rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Allow reading other users for admin purposes
    }
    
    // Family requests collection
    match /familyRequests/{requestId} {
      allow read: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || 
         resource.data.toUid == request.auth.uid);
      allow create: if request.auth != null && 
        request.resource.data.fromUid == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || 
         resource.data.toUid == request.auth.uid);
      allow delete: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || 
         resource.data.toUid == request.auth.uid);
    }
    
    // Family networks collection
    match /familyNetworks/{networkId} {
      allow read: if request.auth != null && 
        resource.data.userUid == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userUid == request.auth.uid;
      allow update: if request.auth != null && 
        resource.data.userUid == request.auth.uid;
      allow delete: if request.auth != null && 
        resource.data.userUid == request.auth.uid;
    }
    
    // Allow authenticated users to read/write their own data for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}